<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="CRUD DETALLES"
        android:textSize="30dp" />



    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cabeceras"/>


        <Spinner
            android:id="@+id/id_cabeceras"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:baselineAligned="false" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip">
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Productos" />


    <Spinner
        android:id="@+id/id_productos"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:baselineAligned="false" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad">

        <EditText
            android:id="@+id/txt_cantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text|numberDecimal" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio">

        <EditText
            android:id="@+id/txt_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text|numberDecimal" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/id_btnCrearDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear" />
    <Button
        android:id="@+id/id_btn_eliminar_detalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Listado"
        android:textSize="20dp" />

    <ListView
        android:id="@+id/lista_detalles"
        android:layout_width="match_parent"
        android:layout_height="158dp">

    </ListView>

</LinearLayout>
